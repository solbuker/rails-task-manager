<h2><%=(@task.title).capitalize%></h2>
<p><%=@task.details%></p>
<% if @task.completed == true %>
<p>this task is completed</p>
<%else%>
<p>this task is not completed</p>
<%end%>
<%= link_to "Back to list", tasks_path%>
<%= link_to "Edit task", edit_task_path%>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure you want to delete?" } %>
